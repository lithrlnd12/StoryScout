                    <!-- Cancel Option -->
                    <Group id="cancelOption" translation="[0, 180]">
                        <Rectangle
                            id="cancelBg"
                            width="400"
                            height="70"
                            color="#374151" />
                        <Label
                            text="Cancel"
                            translation="[0, 20]"
                            width="400"
                            height="70"
                            horizAlign="center"
                            font="font:MediumBoldSystemFont"
                            color="#8B92A8" />
                    </Group>
                </Group>

                <!-- Helper Text -->
