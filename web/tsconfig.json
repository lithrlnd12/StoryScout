{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@tokens/*": ["../shared/tokens/*"],
      "@mocks/*": ["../shared/mocks/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src"],
  "references": []
}
